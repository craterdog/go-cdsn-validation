package #package#

// The following configuration constants are used by regular expressions when
// scanning for intrinsic tokens.
const {
	lowercase   = `\p{Ll}`   // All unicode lowercase letters.
	uppercase   = `\p{Lu}`   // All unicode uppercase letters.
	digit       = `\p{Nd}`   // All unicode digits.
	separator   = `_`        // Allowed separators between letters.
	eol         = `\n`       // Contains the actual characters `\` and `n`, not EOL.
	whitespace  = ` |` + eol // These characters are ignored by the parser.
	base16      = `[0-9a-f]` // Base 16 digits.
	unicode     = `u` + base16 + `{4}|U` + base16 + `{8}`
	escape      = `\\(?:(?:` + unicode + `)|[abfnrtv'"\\])`
}
